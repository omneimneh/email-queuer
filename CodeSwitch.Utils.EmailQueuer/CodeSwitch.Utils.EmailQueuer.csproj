<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Omar Mneimneh</Authors>
    <PackageId>CodeSwitch.Utils.EmailQueuer</PackageId>
    <PackageTags>Email, Smtp, Queue, Razor</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReleaseNotes>Fixed template path not getting copied from json configuration</PackageReleaseNotes>
    <Description>A library for asp.net core that allows you to send emails without having memory leaks</Description>
    <RepositoryUrl>https://github.com/omneimneh/email-queuer</RepositoryUrl>
    <RepositoryType></RepositoryType>
    <PackageIcon>icon.png</PackageIcon>
    <PackageProjectUrl>https://github.com/omneimneh/email-queuer</PackageProjectUrl>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <Version>1.0.5.2</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FluentEmail.Core" Version="3.0.0" />
    <PackageReference Include="FluentEmail.Smtp" Version="3.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="5.0.4" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="5.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="PreMailer.Net" Version="2.2.0" />
    <PackageReference Include="RazorLight" Version="2.0.0-beta7" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
 
</Project>
